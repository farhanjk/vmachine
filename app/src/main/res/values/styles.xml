<resources xmlns:ns1="http://schemas.android.com/tools" xmlns:tools="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--EditText hint color-->
        <item name="colorControlActivated">@color/gray2</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/gray2</item>
        <!-- EditText underline color (unfocused) -->
        <item name="colorControlNormal">@color/gray2</item>
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/ocean_blue</item>
    </style>

    <style name="Button.Default.Primary" />

    <style name="Button.Default">
        <item name="android:textColor">@color/btn_primary_text</item>
        <item name="buttonPrimaryDisabled">@color/gray1</item>
        <item name="buttonPrimaryEnabled">@color/ocean_blue</item>
        <item name="buttonPrimaryPressed">@color/ocean_blue</item>
        <item name="buttonPrimaryFocused">@color/pale_sky_blue</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="Button">
        <item name="android:theme">@style/ThemeOverlay.Vending.Button</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation" ns1:targetApi="lollipop">0dp</item>
        <item name="android:stateListAnimator" ns1:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Vending.Button</item>
    </style>

    <style name="ThemeOverlay.Vending.Button" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/bkg_button_primary</item>
        <item name="colorButtonNormal">@color/bkg_button_primary</item>
        <item name="colorControlNormal">@color/bkg_button_primary</item>
        <item name="colorControlHighlight">@color/ocean_blue</item>
    </style>

    <style name="TextAppearance.Vending.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Vending" />

    <style name="TextAppearance" />

    <style name="TextAppearance.Vending.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Vending.Body1.Bold" parent="TextAppearance.Vending.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Vending.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextAppearance.Vending.TextInput">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
